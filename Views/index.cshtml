@{
  Layout="Shared/_Layout.cshtml";
}

<div class="index">
  <div class="jumbotron">
    <h1>Address Book</h1>
  </div>

  @if ( @Model.Count == 0)
  {
    <h1>No contacts at the moment</h1>
  }
  else
  {
    <h1>Contacts</h1>
  }

  <ol class="contactList">
    @foreach (var contact in Model)
    {
      <li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li>
    }
  </ol>


  <h2><a href="/contact/form">Add a new contact</a></h2>

  <form class="delete" action="/contacts/clear" method="post">
    <h2><button type="submit" name="clear-contacts">Delete Contacts</button></h2>
  </form>
</div>
